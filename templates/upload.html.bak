{% extends "base.html" %}
{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Subir Nuevo Curso</h2>
                    <form method="post" enctype="multipart/form-data">
                        {% csrf_token %}
                        <div class="mb-3">
                            <label for="affiliate_commission" class="form-label">Comisión de Afiliados (%)</label>
                            <input type="number" class="form-control" id="affiliate_commission" name="affiliate_commission" value="10" min="0" max="100" required>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Título del Curso</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Precio</label>
                            <input type="number" step="0.01" class="form-control" id="price" name="price" required>
                        </div>
                        <div class="mb-3">
                            <label for="duration" class="form-label">Duración (ej. 10 horas)</label>
                            <input type="text" class="form-control" id="duration" name="duration">
                        </div>
                        <div class="mb-3">
                            <label for="level" class="form-label">Nivel (ej. Principiante)</label>
                            <input type="text" class="form-control" id="level" name="level">
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Imagen del Curso</label>
                            <input type="file" class="form-control" id="image" name="image">
                        </div>
                        <div class="d-grid">
                            <div class="mb-3">
                                <label for="category" class="form-label">Categoría</label>
                                <select class="form-control" id="category" name="category">
                                    <option value="">Sin categoría</option>
                                    {% for category in categories %}
                                    <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Subir Curso</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}